<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
     
    <ImageView
        android:id="@+id/imageLogo1"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginTop="5dp"
        android:src="@drawable/logo3" />
    
     <ImageView
        android:id="@+id/imageLine1"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageLogo1"
         android:layout_marginTop="8dp"
        android:src="@drawable/line" />
    
    <TextView
        android:id="@+id/xcoor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageLine1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="3dp"
        android:text="X Coordinate: "
        android:textSize="13sp" />

    <TextView
        android:id="@+id/ycoor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/zcoor"
        android:layout_below="@+id/xcoor"
        android:text="Y Coordinate: "
        android:textSize="13sp" />

    <TextView
        android:id="@+id/zcoor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/xcoor"
        android:layout_below="@+id/ycoor"
        android:text="Z Coordinate: "
        android:textSize="13sp" />

    <TextView
        android:id="@+id/max_x_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zcoor"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:text="max-x:"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/max_y_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/max_x_text"
        android:layout_marginLeft="3dp"
        android:text="max-y:"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/max_z_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/max_y_text"
        android:layout_marginLeft="3dp"
        android:text="max-z:"
        android:textSize="13sp" />
    
    <TextView
        android:id="@+id/check1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/max_z_text"
        android:layout_marginLeft="3dp"
        android:text="check: "
        android:textSize="13sp" />
    
     <TextView
        android:id="@+id/xArray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check1"
        android:layout_marginLeft="3dp"
        android:text="xArray "
        android:textSize="13sp" />
     
      <TextView
        android:id="@+id/yArray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xArray"
        android:layout_marginLeft="3dp"
        android:text="yArray "
        android:textSize="13sp" />
      
      <TextView
        android:id="@+id/zArray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yArray"
        android:layout_marginLeft="3dp"
        android:text="zArray "
        android:textSize="13sp" />


     <ImageButton
         android:id="@+id/imageButton1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/max_z_text"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="40dp"
         android:background="@drawable/new_button"  />
     
      <TextView
        android:id="@+id/countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="3dp"
        android:text="countdown: "
        android:textSize="13sp" />

</RelativeLayout>

